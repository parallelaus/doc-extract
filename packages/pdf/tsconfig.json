{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "moduleResolution": "node",
    "paths": {
      "@parallelsoftware/doc-extract": ["../core/dist"],
      "@parallelsoftware/doc-extract/*": ["../core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../core" }
  ]
}
